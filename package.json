{
  "name": "comphy-theme",
  "publisher": "vatsalsy",
  "displayName": "CoMPhy Color Theme Collection",
  "description": "A collection of high-contrast themes based on Gruvbox with clear foregrounds, optimized for computational physics workflows",
  "version": "4.0.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "icon": "icon.png",
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "comphy",
    "gruvbox",
    "dark theme",
    "high contrast",
    "latex",
    "computational physics"
  ],
  "galleryBanner": {
    "color": "#1d2021",
    "theme": "dark"
  },
  "contributes": {
    "themes": [
      {
        "label": "CoMPhy Gruvbox Classic",
        "uiTheme": "vs-dark",
        "path": "./themes/gruvbox-crisp-high-contrast.json",
        "semanticHighlighting": true
      },
      {
        "label": "CoMPhy Gruvbox Pop",
        "uiTheme": "vs-dark",
        "path": "./themes/gruvbox-crisp-anysphere-contrast-pop.json",
        "semanticHighlighting": true
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VatsalSy/comphy-vscode-theme"
  },
  "bugs": {
    "url": "https://github.com/VatsalSy/comphy-vscode-theme/issues"
  },
  "author": {
    "name": "Vatsal"
  },
  "license": "MIT",
  "homepage": "https://github.com/VatsalSy/comphy-vscode-theme#readme",
  "scripts": {
    "build": "node scripts/build-themes.js",
    "prebuild": "echo 'Building theme variants from base configuration...'",
    "postbuild": "echo 'Theme generation complete!'",
    "lint": "sh scripts/runLint.sh",
    "test": "sh scripts/runTest.sh"
  }
}
